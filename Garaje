import paho.mqtt.client as mqtt

broker = "broker.emqx.io"  # Cambia con la URL de tu broker si tienes una espec√≠fica
client = mqtt.Client("HomeAutomation")

def on_connect(client, userdata, flags, rc):
    print("Conectado al broker MQTT")

client.on_connect = on_connect
client.connect(broker)

def open_garage():
    client.publish("home/garage", "open")
    print("Garaje abierto")

def close_garage():
    client.publish("home/garage", "close")
    print("Garaje cerrado")

def turn_on_lights():
    client.publish("home/lights", "on")
    print("Luces encendidas")
